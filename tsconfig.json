{
  "extends": "expo/tsconfig.base",
  "resolveJsonModule": true,
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@providers/*": ["src/providers/*"],
      "@screens/*": ["src/screens/*"],
      "@services/*": ["src/services/*"],
      "@src/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "@styles/*": ["src/styles/*"],
      "@state/*": ["src/state/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
